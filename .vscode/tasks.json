{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "[ Build with gcc ]",
			"command": "mingw32-make",
			"args": [
				"-C",
				"${cwd}"
			],
			"options": {
				"cwd": "C:/MinGW/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:/MinGW/bin/gcc.exe"
		},
		{
			"type": "shell",
			"label": "clean",
			"linux": {
				"command": "find",
				"args": [
					"${cwd}",
					"-type",
					"f",
					"-name",
					"*.o",
					"-exec",
					"rm",
					"-f",
					"{}",
					"\\;"
				]
			},
			"windows": {
				"command": "del",
				"args": [
					"/s",
					"/q",
					"\"${cwd}\\*.o\""
				]
			},
			"problemMatcher": []
		}
	]
}